<Window x:Class="Checkers.logIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Checkers"
        mc:Ignorable="d"
        Title="logIn" Height="300" Width="300">
    <Grid>
        <TextBlock x:Name="nameBlock" HorizontalAlignment="Left" Margin="10,23,0,0" TextWrapping="Wrap" Text="Name:" VerticalAlignment="Top"/>
        <TextBox x:Name="nameTex" HorizontalAlignment="Left" Height="16" Margin="64,23,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="76"/>

        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,45,0,0" TextWrapping="Wrap" Text="E-mail" VerticalAlignment="Top"/>
        <TextBox x:Name="emailTex" HorizontalAlignment="Left" Height="16" Margin="64,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="76"/>
        <Button x:Name="login" Content="Login" HorizontalAlignment="Left" Margin="35,100,0,0" VerticalAlignment="Top" Width="75" Click="login_Click"/>

    </Grid>
</Window>
