<Window x:Class="Checkers.TeamLogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Checkers"
        mc:Ignorable="d"
        Title="TeamLogIn" Height="300" Width="300">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="42,62,0,0" TextWrapping="Wrap" Text="Team name:" VerticalAlignment="Top"/>
        <TextBox x:Name="teamname" HorizontalAlignment="Left" Height="23" Margin="118,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="login" Content="LogIn" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="100,105,0,0" Click="login_Click"/>

    </Grid>
</Window>
